<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.DetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/photoIV"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/kotik" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/nameDonationTV"
                        android:textSize="24sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/black"
                        android:text="Добряши помогают котам" />
                    <TextView
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:fontFamily="@string/font_fontFamily_medium"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/light_text2"
                        android:text="Автор Матвей Правосудов" />
                    <TextView
                        android:id="@+id/dateTV"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/light_text"
                        android:text="Сбор заканчивается через 5 дней" />
                    <View style="@style/Divider.Horizontal"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"/>
                    <TextView
                        android:id="@+id/date2TV"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:text="Нужно собрать до 30 сентября" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:alpha=".30"
                            android:background="@drawable/progress_detail_gray"/>
                        <TextView
                            android:id="@+id/allProgressTV"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="14dp"
                            android:textColor="@color/green_progress"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentRight="true"
                            android:text="10 000 ₽" />
                        <LinearLayout
                            android:id="@+id/greenProgressLL"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/progress_detail_green"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/whiteProgressTV"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textColor="@color/white"
                                android:gravity="right"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@id/greenProgressTV"
                                android:text="8 750 ₽" />
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/successTV"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@id/greenProgressTV"
                                android:text="Сбор завершен!" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/greenProgressTV"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="14dp"
                            android:textColor="@color/green_progress"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/greenProgressLL"
                            android:text="8 750 ₽" />


                    </RelativeLayout>

                    <View style="@style/Divider.Horizontal"
                        android:layout_marginBottom="12dp"/>
                    <TextView
                        android:id="@+id/descriptionTV"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:text="В своём стремлении улучшить пользовательский опыт мы упускаем, что акционеры крупнейших компаний набирают популярность среди определенных слоев населения, а значит, должны быть описаны максимально подробно. Постоянный количественный рост и сфера нашей активности способствует повышению качества переосмысления внешнеэкономических политик. Приятно, граждане, наблюдать, как предприниматели в сети интернет формируют глобальную экономическую сеть и при этом - ассоциативно распределены по отраслям." />
                    <View style="@style/Divider.Horizontal"
                        android:layout_marginTop="12dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="6dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_like_outline_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="65"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/light_text"
                                android:fontFamily="@string/font_fontFamily_medium"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="6dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_comment_outline_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="35"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/light_text"
                                android:fontFamily="@string/font_fontFamily_medium"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_share_outline_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="4"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/light_text"
                                android:fontFamily="@string/font_fontFamily_medium"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="6dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:src="@drawable/ic_eye"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="7,2K"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/light_text"
                                android:fontFamily="@string/font_fontFamily_medium"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/homeUpIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_back_icon"
                app:tint="@color/white" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:fontFamily="@string/font_fontFamily_medium"
                        android:textColor="@color/black"
                        android:layout_marginRight="32dp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View style="@style/Divider.Horizontal"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/currentAmountTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="8dp"
                        android:text="Помогите первым"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            style="@style/Divider.Horizontal2"
                            android:layout_marginBottom="12dp"
                            android:alpha=".40"
                            android:background="@color/button_dash_stroke" />
                        <View
                            android:id="@+id/progressView"
                            style="@style/Divider.Horizontal2"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="12dp"
                            android:background="@color/button_dash_stroke" />
                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/helpBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:alpha=".40"
                    android:background="@drawable/button_blue_stroke_vk"
                    android:enabled="false"
                    android:text="Помочь"
                    android:textAllCaps="false"
                    android:textColor="@color/button_dash_stroke"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>