<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#ffffff"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:drawableLeft="@drawable/ic_best"
            android:drawablePadding="12dp"
            android:id="@+id/radioEmo1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:padding="20dp"
            android:text="Хорошее"
            android:onClick="onRadioButtonClicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:drawableLeft="@drawable/ic_scver"
            android:drawablePadding="12dp"
            android:id="@+id/radioEmo2"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:padding="20dp"
            android:text="Скверное"
            android:onClick="onRadioButtonClicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableLeft="@drawable/ic_middle"
            android:drawablePadding="12dp"
            android:id="@+id/radioEmo3"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:padding="20dp"
            android:text="Умиротворённое"
            android:onClick="onRadioButtonClicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:drawableLeft="@drawable/ic_energy"
            android:drawablePadding="12dp"
            android:id="@+id/radioEmo4"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:padding="20dp"
            android:text="Энергичное"
            android:onClick="onRadioButtonClicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>
</LinearLayout>